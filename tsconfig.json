{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "es2020",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "ES2020",
    "types": [
      "node", 
      "jest"
    ],
    "skipLibCheck": true,
    "lib": [
      "ES2020",
      "WebWorker",
      "DOM"
    ],
    "allowJs": true,
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": "./src",  
    "paths": {
      "*": ["*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
